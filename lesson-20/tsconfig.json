{
    "include": ["**/*", "src"],
    "exclude": ["eslint.config.mjs", "./build/**/*", "./node_modules/**/*"],
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ES6",
        "lib": ["es6", "DOM"],
        "module": "ESnext",
        "noEmit": true,
        "rootDir": ".",
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "typeRoots": ["node_modules/@types"],
        "types": ["node"],
        "allowImportingTsExtensions": true
    }
}

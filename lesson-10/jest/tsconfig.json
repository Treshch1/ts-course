{
    "include": [
        "**/*"
    ],
    "exclude": [
        "eslint.config.mjs",
        "./build/**/*",
        "./node_modules/**/*"
    ],
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "module": "ESNext",
        "rootDir": ".",
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "typeRoots": [
        "node_modules/@types"
        ],
    },
    "ts-node": {
        "esm": true,
        "swc": true
    }
}
